<%= form_for @party do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :host %><br />
    <%= f.text_field :host %>
  </p>
  <p>
    <%= f.label :party_date %><br />
    <%= f.datetime_select :party_date %>
  </p>
  <p><%= f.submit %></p>
<% end %>
